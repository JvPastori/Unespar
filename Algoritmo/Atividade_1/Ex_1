#include <stdio.h>

int main() {
    int vetor[9];

    
    printf("Digite nove números inteiros:\n");
    for (int i = 0; i < 9; i++) {
        scanf("%d", &vetor[i]);
    }
    
    printf("Números pares e suas posições no vetor:\n");
    for (int i = 0; i < 9; i++) {
        if (vetor[i] % 2 == 0) {
            printf("Número par: %d, Posição: %d\n", vetor[i], i);
        }
    }

    return 0;
}